<!DOCTYPE html>
<html>
  <head>
    <title>Labexperiment</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <% if logged_in? %>
      <a href = "/users/logout">log out</a><br>
      <a href = "/users/index"><%= current_user.username %></a><br>
    <% else %>
      <a href = "/users/login">log in</a><br>
      <a href = "/users/new">register</a><br>
    <% end %>
    <%= link_to 'Home', proposals_path %>

    <%= yield %>
  </body>
</html>
